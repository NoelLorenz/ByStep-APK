<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            motion:layout_constraintEnd_toStartOf="@id/gV90"
            motion:layout_constraintStart_toEndOf="@id/gV10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/gH70"
            motion:layout_constraintTop_toBottomOf="@id/gH30"
            android:alpha="0" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            motion:layout_constraintEnd_toStartOf="@id/gV90"
            motion:layout_constraintStart_toEndOf="@id/gV10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/gH70"
            motion:layout_constraintTop_toBottomOf="@id/gH30"
            android:alpha="1"
            android:scaleX=".5"
            android:scaleY=".5" />
        <Constraint
            android:id="@+id/bgSplash"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>
</MotionScene>