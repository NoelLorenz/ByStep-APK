<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clearance">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wayt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/processBgClearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgblue"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:overScrollMode="never"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/clearanceHeaderBg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/processhead"
                            android:scaleType="centerCrop"/>
                        <LinearLayout
                            android:id="@+id/headerBtns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            android:onClick="mainMenu"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="@drawable/ripple_main"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/enrol_home"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/arrow_circle_btnbg"
                                android:src="@drawable/arrow_backtomain" />
                            <TextView
                                android:id="@+id/headerEnroll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Home"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintGuide_percent="0.03"
                            android:orientation="vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="CLEARANCE"
                            android:textColor="@color/white"
                            android:textSize="48sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/guide" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procedure"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step1clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step1"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step3clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step1clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step3"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step4clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step3clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step4"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step5clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step4clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step5"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step6clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step5clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step6"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step7clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step6clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step7"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step8clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step7clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step8"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step10clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step8clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step10"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/step11clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step10clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step11"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step9clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step11clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step9"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/step12clear"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_max="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp"
                        app:contentPadding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/step9clear"
                        style="@style/CustomCard">
                        <include layout="@layout/clearance_step12"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>