<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clearance">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wayt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/processBgId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgblue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:overScrollMode="never"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/idHeaderBg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/processhead"
                            android:scaleType="centerCrop"/>
                        <LinearLayout
                            android:id="@+id/headerBtns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            android:onClick="mainMenu"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:background="@drawable/ripple_main"
                            android:orientation="horizontal">
                            <ImageButton
                                android:id="@+id/enrol_home"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/arrow_circle_btnbg"
                                android:src="@drawable/arrow_backtomain" />
                            <TextView
                                android:id="@+id/headerEnroll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Home"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guide"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintGuide_percent="0.03"
                            android:orientation="vertical"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/poppins_bold"
                            android:lineSpacingExtra="-10sp"
                            android:text="SCHOOL ID"
                            android:textColor="@color/white"
                            android:textSize="48sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/guide"
                            app:layout_constraintTop_toBottomOf="@id/headerBtns"
                            app:layout_constraintVertical_bias="1.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <Button
                        android:id="@+id/idRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Registration"
                        android:textColor="@color/processDark"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@color/transparent"/>
                    <Button
                        android:id="@+id/idRenew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Renewal"
                        android:textColor="@color/processWhite"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@color/cardInside"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/renewpage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/step1renew"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_max="500dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/CustomCard">
                            <include layout="@layout/id_renew_step1"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/step2renew"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_max="500dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/step1renew"
                            style="@style/CustomCard">
                            <include layout="@layout/id_renew_step2"/>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/registerpage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/step1register"
                            style="@style/CustomCard"
                            android:layout_width="0dp"
                            app:layout_constraintWidth_max="500dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:elevation="10dp"
                            app:cardCornerRadius="10dp"
                            app:contentPadding="10dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <include layout="@layout/id_register" />
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>