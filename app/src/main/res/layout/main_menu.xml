<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".95"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/one"
        android:layout_width="0dp"
        app:layout_constraintWidth_max="750dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp"
        android:onClick="goEnrollment"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toTopOf="@id/two">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_enrollment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrollment"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:onClick="goClearance"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toTopOf="@id/three">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_clearance"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clearance"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:onClick="goExcuseLetter"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toTopOf="@id/four">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_excuseletter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excuse Letter"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:onClick="goExaminationPermit"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toTopOf="@id/five">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_exampermit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam Permit"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:onClick="goRenew"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toTopOf="@id/six">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_idrenewal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School I.D"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        app:contentPadding="15dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white"
        android:onClick="goToR"
        android:layout_margin="10dp"
        android:elevation="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/ripple_main"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/main_tor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transcript of Records"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/mainPage"
                android:layout_margin="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_main"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>